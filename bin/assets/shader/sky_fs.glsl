#ifdef APPLE
#version 410 core
#else
#version 450 core
#endif

// ------------------------------------------------------------------
// UNIFORM SAMPLERS -------------------------------------------------
// ------------------------------------------------------------------

uniform sampler2D u_Cubemap; //#slot 0

// ------------------------------------------------------------------
// INPUT VARIABLES  -------------------------------------------------
// ------------------------------------------------------------------

in vec3 PS_IN_TexCoords;

// ------------------------------------------------------------------
// OUTPUT VARIABLES  ------------------------------------------------
// ------------------------------------------------------------------

out vec4 PS_OUT_Color;

// ------------------------------------------------------------------
// MAIN -------------------------------------------------------------
// ------------------------------------------------------------------

void main()
{
	PS_OUT_Color = texture(u_Cubemap, PS_IN_TexCoords);
}
